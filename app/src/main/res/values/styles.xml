<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:radioButtonStyle">@style/CustomRadioButton</item>
        <item name="editTextStyle">@style/myEditTextStyle</item>
    </style>

    <style name="CustomRadioButton" parent="@android:style/Widget.Holo.CompoundButton.RadioButton">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="myEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="colorControlNormal">@color/color_text_light</item>
        <item name="colorControlActivated">@color/color_text_light</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Holo.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/color_text_light</item>
        <item name="tabIndicatorColor">@color/color_text_light</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
