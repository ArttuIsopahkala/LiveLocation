<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_main"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/request_profile_picture"
            android:src="@drawable/default_profile_picture"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />
        <TextView android:text="Arttu Isopahkala"
            android:id="@+id/request_full_name_text"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_text_light"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.48"
            android:layout_height="wrap_content"
            android:id="@+id/request_decline_button"
            android:text="@string/friend_request_decline"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.04"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="0.48"
            android:layout_height="wrap_content"
            android:id="@+id/request_accept_button"
            android:text="@string/friend_request_accept"/>
    </LinearLayout>
</LinearLayout>