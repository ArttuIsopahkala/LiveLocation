<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#fff" />
                    <solid android:color="#fff"/>
                    <size
                        android:width="25dp"
                        android:height="25dp" />
                </shape>
            </item>

            <item
                android:width="8dp"
                android:height="2dp"
                android:top="16dp"
                android:left="5dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/color_secondary"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="14dp"
                android:height="2dp"
                android:top="13dp"
                android:left="9dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/color_secondary"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>